<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <i class="fas fa-exclamation-triangle text-warning" style="font-size: 5rem;"></i>
            <h1 class="display-1 mt-4"><%= error.status || 500 %></h1>
            <h2 class="mb-4">Oops! Something Went Wrong</h2>
            <p class="lead text-muted mb-4"><%= message %></p>
            
            <div class="mt-4">
                <a href="/" class="btn btn-primary btn-lg me-2">
                    <i class="fas fa-home"></i> Go Home
                </a>
                <a href="/tasks" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-list"></i> View Tasks
                </a>
            </div>
        </div>
    </div>
</div>