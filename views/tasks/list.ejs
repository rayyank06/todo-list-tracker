<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="fas fa-list text-primary"></i> All Tasks</h1>
            <p class="text-muted">Manage and track all your to-do items</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="/tasks/add" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> Add New Task
            </a>
        </div>
    </div>

    <% if (tasks && tasks.length > 0) { %>
        <!-- Tasks List -->
        <div class="row">
            <% tasks.forEach(task => { %>
                <div class="col-12 mb-3">
                    <div class="card task-card priority-<%= task.priority.toLowerCase() %> <%= task.status === 'Done' ? 'task-done' : '' %>">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h5 class="card-title task-title mb-2">
                                        <% if (task.status === 'Done') { %>
                                            <i class="fas fa-check-circle text-success"></i>
                                        <% } else { %>
                                            <i class="far fa-circle text-secondary"></i>
                                        <% } %>
                                        <%= task.title %>
                                    </h5>
                                    <% if (task.description) { %>
                                        <p class="card-text text-muted mb-2"><%= task.description %></p>
                                    <% } %>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted d-block mb-2">
                                        <i class="far fa-calendar"></i> 
                                        <%= new Date(task.dueDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                                    </small>
                                    <span class="badge badge-priority-<%= task.priority.toLowerCase() %>">
                                        <%= task.priority %> Priority
                                    </span>
                                    <span class="badge badge-<%= task.status === 'Done' ? 'done' : 'not-done' %> ms-1">
                                        <%= task.status %>
                                    </span>
                                </div>
                                <div class="col-md-3 text-end">
                                    <a href="/tasks/edit/<%= task._id %>" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a href="/tasks/delete/<%= task._id %>" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <!-- Empty State -->
        <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h3 class="mt-3">No Tasks Yet</h3>
            <p>Start by adding your first task!</p>
            <a href="/tasks/add" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-plus"></i> Add Your First Task
            </a>
        </div>
    <% } %>
</div>