<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Task
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="delete-warning">
                        <h4 class="text-danger mb-3">
                            <i class="fas fa-exclamation-circle"></i> Warning!
                        </h4>
                        <p class="mb-0">
                        </p>
                    </div>

                    <!-- Task Details -->
                    <div class="card bg-light mt-4 mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <i class="fas fa-info-circle"></i> Task Details
                            </h5>
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Title:</dt>
                                <dd class="col-sm-9"><%= task.title %></dd>

                                <% if (task.description) { %>
                                    <dt class="col-sm-3">Description:</dt>
                                    <dd class="col-sm-9"><%= task.description %></dd>
                                <% } %>

                                <dt class="col-sm-3">Due Date:</dt>
                                <dd class="col-sm-9">
                                    <%= new Date(task.dueDate).toLocaleDateString('en-US', { 
                                        weekday: 'long', 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </dd>

                                <dt class="col-sm-3">Priority:</dt>
                                <dd class="col-sm-9">
                                    <span class="badge badge-priority-<%= task.priority.toLowerCase() %>">
                                        <%= task.priority %>
                                    </span>
                                </dd>

                                <dt class="col-sm-3">Status:</dt>
                                <dd class="col-sm-9">
                                    <span class="badge badge-<%= task.status === 'Done' ? 'done' : 'not-done' %>">
                                        <%= task.status %>
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/tasks" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <form action="/tasks/delete/<%= task._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-lg btn-custom">
                                <i class="fas fa-trash"></i> Yes, Delete Task
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>